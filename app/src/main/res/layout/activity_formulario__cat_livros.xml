<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro.Formulario_CatLivros">

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="532dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText_CodCatLivro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Codigo de Categoria"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_DescricaoCatLivro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Descrição"
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_AluguelCatLivro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Aluguel Maximo"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText_MultaCatLivro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Multa"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_CadastroFormLivro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>